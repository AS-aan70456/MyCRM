@model RegisterViewModel 

@{
    Layout = "_LayoutAutorization";
}

<form asp-controller="Account" asp-action="Register" method="post" class="card auth-card">
    <div class="card-content">
        <span class="card-title">Домашняя бухгалтерия</span>
        <input hidden asp-for="ReturnUrl" />
        <div class="input-field">
            <input asp-for="UserName" ,
                   id="name"
                   type="text"
                   class="validate"
                   placeholder="Имя">
            <span asp-validation-for="UserName" class="helper-text invalid"></span>
        </div>
        <div class="input-field">
            <input asp-for="password" ,
                   id="password"
                   type="password"
                   class="validate"
                   placeholder="Пароль">
            <span asp-validation-for="password" class="helper-text invalid"></span>
        </div>
        <div class="input-field">
            <input asp-for="Email" ,
                   id="email"
                   type="text"
                   placeholder="Email">
            <span asp-validation-for="Email" class="helper-text invalid"></span>
        </div>
        <p>
            <label>
                <input type="checkbox" />
                <span>С правилами согласен</span>
            </label>
        </p>
    </div>
    <div class="card-action">
        <div>
            <button class="btn waves-effect waves-light auth-submit"
                    type="submit">
                Зарегистрироваться
                <i class="material-icons right">send</i>
            </button>
        </div>

        <p class="center">
            Уже есть аккаунт?
            <a href="/Account/Login">Войти!</a>
        </p>
    </div>
</form>