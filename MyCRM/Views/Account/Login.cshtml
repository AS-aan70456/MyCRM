@model LoginViewModel
@{
    Layout = "_LayoutAutorization";
}

<form asp-controller="Account" asp-action="Login" method="post" class="card auth-card">
    <div class="card-content">
        <span class="card-title">Домашняя бухгалтерия</span>
        <input hidden asp-for="ReturnUrl" />
        <div class="input-field">
            <input asp-for="UserName"
                   id="name"
                   type="text"
                   class="validate"
                   placeholder="Имя">
            <span asp-validation-for="UserName" class="helper-text invalid" ></span>
        </div>
        <div class="input-field">
            <input  asp-for="password"
                   id="password"
                   type="password"
                   class="validate"
                   placeholder="Пароль">
            
            <span asp-validation-for="password" class="helper-text invalid"></span>
        </div>
    </div>
    <div class="card-action">
        <div>
            <button class="btn waves-effect waves-light auth-submit"
                    type="submit">
                Войти
                <i class="material-icons right">send</i>
            </button>
        </div>

        <p class="center">
            Нет аккаунта?
            <a href="/Account/Register">Зарегистрироваться</a>
        </p>
    </div>
</form>
