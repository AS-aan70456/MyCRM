@model HomeViewModel

<div class="page-title">
    <h3>Счет</h3>

    <a href="/Home" class="btn waves-effect waves-light btn-small">
        <i class="material-icons">refresh</i>
    </a>
</div>

<div class="row">
    <div class="col s12 m6 l4">
        <div class="card light-blue bill-card">
            <div class="card-content white-text">
                <span class="card-title">Счет</span>

                <p id="bill" class="currency-line">
                    <span>@(Model.bill.ToString("c"))</span>
                </p>
            </div>
        </div>
    </div>

    <div class="col s12 m6 l8">
        <div class="card orange darken-3 bill-card">
            <div class="card-content white-text">
                <div class="card-header">
                    <span class="card-title">Курс валют</span>
                </div>
                <table>
                    <thead>
                        <tr>
                            <th>Валюта</th>
                            <th>Курс</th>
                            <th>Счет в валюте</th>
                        </tr>
                    </thead>

                    <tbody>
                        <tr>
                            <td>долари</td>
                            <td id="RateUSA">@Model.USA</td>
                            <td>@((int)(@Model.bill / @Model.USA))$</td>
                        </tr>
                    </tbody>

                    <tbody>
                        <tr>
                            <td>евро</td>
                            <td id="RateEUR">@Model.EUR</td>
                            <td>@((int)(@Model.bill / @Model.EUR))€</td>
                        </tr>
                    </tbody>

                    <tbody>
                        <tr>
                            <td>гривни</td>
                            <td id="RateUAH">@Model.UAH</td>
                            <td>@((int)(@Model.bill / @Model.UAH))₴</td>
                        </tr>
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
